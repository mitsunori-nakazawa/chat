<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @food, local: true) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'foods/foods', foods: @foods %>
    </div>
  </div>
<% else %>
  <div class="center top-image">
    <div class="text-center top-text">
      <h1>Gourmet List</h1>
      <p>~ 自分のお気に入りのグルメを投稿しよう ~ </p>
      <%= link_to 'Sign up!', signup_path, class: 'btn btn-lg btn-primary top-btn' %>
      <%= link_to 'Login', login_path, class: 'btn btn-lg btn-primary top-btn' %>
    </div>
  </div>
<% end %>